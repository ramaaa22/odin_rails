<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= article.body %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= article.status %>
  </p>

  <% if article.comments.length!= 0 %>
    <h1>Comments</h1>
    <%= render article.comments %>
  
  <% else %>
    <p> There aren't comments to show yet </p>
  <% end %>
 

</div>
